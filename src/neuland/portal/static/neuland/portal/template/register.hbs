<form role="form" {{action "login" on="submit"}}>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        {{input type="email" class="form-control" placeholder="Enter email" id="exampleInputEmail1"}}
    </div>
	<div class="form-group">
		<label for="exampleInputUsername">Username</label>
		<input type="text" class="form-control" id="exampleInputUsername" placeholder="Enter username">
	</div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
